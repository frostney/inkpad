doctype 5
html
  head
    title= title
    link(rel='stylesheet', href='/stylesheets/bootstrap.css')
    link(rel='stylesheet', href='/stylesheets/bootstrap-datetimepicker.min.css')
    link(rel='stylesheet', href='/stylesheets/style.css')
  body
    header
      .navbar
        .navbar-inner
          a.brand(href="#") Inkpad
          ul.nav
            for val, key in navigation
              if val.type == 'simple'
                if currentPage == key
                  li.active
                    a(href="#{val.link}")= key
                 else
                   li
                     a(href="#{val.link}")= key
              else
                li.dropdown
                  a.dropdown-toggle(data-toggle="dropdown",href="#")= key
                    b.caret
                  ul.dropdown-menu
                    for subval, subkey in val.links
                      li
                        a(href="#{subval}")= subkey
            form.navbar-search.pull-left
              input.search-jquery(type="text",placeholder="Search")
    #content
      block content
    footer Inkpad
    
    script(src='http://code.jquery.com/jquery.js')
    script(src='/js/bootstrap.js')
    script(src='/js/bootstrap-datetimepicker.min.js')
    block scripts